    "rxjs": "~6.6.0"
  },
  "devDependencies": {
    "@types/react": "~17.0.0",
    "@types/react-dom": "~17.0.0",
    "@types/react-router-dom": "~5.1.0",
    "fastify": "~3.12.0",
    "fastify-cors": "~5.2.0",
    "react-scripts": "~4.0.0",
    "typescript": "~4.1.0"
  },
  "browserslist": [
    ">0.2%",
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version"
  ]
